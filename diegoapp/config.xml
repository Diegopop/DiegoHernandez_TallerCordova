<?xml version='1.0' encoding='utf-8'?>
<widget id="org.myapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>diegoapp</name>
    <description>
        My app
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Diego Hernández Ramírez
    </author>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true|false" />
    <preference name="SplashShowOnlyFirstTime" value="true|false" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="android">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="www/img/logol.png" density="land-hdpi"/>
        <splash src="www/img/logol.png" density="land-ldpi"/>
        <splash src="www/img/logol.png" density="land-mdpi"/>
        <splash src="www/img/logol.png" density="land-xhdpi"/>
        <splash src="www/img/logol.png" density="port-hdpi"/>
        <splash src="www/img/logol.png" density="port-ldpi"/>
        <splash src="www/img/logol.png" density="port-mdpi"/>
        <splash src="www/img/logol.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="www/img/logol.png" density="land-hdpi"/>
        <splash src="www/img/logol.png" density="land-ldpi"/>
        <splash src="www/img/logol.png" density="land-mdpi"/>
        <splash src="www/img/logol.png" density="land-xhdpi"/>
        <splash src="www/img/logol.png" density="port-hdpi"/>
        <splash src="www/img/logol.png" density="port-ldpi"/>
        <splash src="www/img/logol.png" density="port-mdpi"/>
        <splash src="www/img/logol.png" density="port-xhdpi"/>
    </platform>
    <icon src="www/img/logol.png"/>
</widget>
